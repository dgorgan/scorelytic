{
  "extends": "../tsconfig.base.json",
  "compilerOptions": {
    "composite": true,
    "declaration": true,
    "declarationMap": true,
    "noEmit": false,
    "outDir": "dist",
    "rootDir": "src",
    "baseUrl": "src",
    "paths": {
      "@scorelytic/shared": ["../../shared/src/index.ts"],
      "@scorelytic/shared/*": ["../../shared/src/*"],
      "@/*": ["*"]
    },
    "allowImportingTsExtensions": false,
    "types": ["node", "jest"]
  },
  "include": ["src"],
  "exclude": ["node_modules"],
  "references": [{ "path": "../shared" }]
}
