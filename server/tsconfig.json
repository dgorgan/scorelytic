{
  "compilerOptions": {
    "baseUrl": "./src",  // base path for resolving modules
    "paths": {
      "@/*": ["*"]  // alias configuration
    },
    "target": "ES6",
    "module": "CommonJS",
    "outDir": "./dist", // output directory for compiled JavaScript
    "rootDir": ".", // allow imports from src and config
    "esModuleInterop": true,
    "moduleResolution": "node",
    "strict": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
  },
  "include": ["src/**/*.ts", "config/**/*.ts"],
  "exclude": ["node_modules"]
}