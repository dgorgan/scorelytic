{
  "extends": "./tsconfig.base.json",
  "compilerOptions": {
    "baseUrl": ".",
    "paths": {
      "@/*": [
        "./*"
      ],
      "@/shared/*": [
        "../shared/*"
      ],
      "@/services/*": [
        "services/*"
      ],
      "shared/*": [
        "../shared/*",
        "../shared/*.ts"
      ]
    },
    "jsx": "react-jsx",
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "allowJs": true,
    "noEmit": true,
    "incremental": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "plugins": [
      {
        "name": "next"
      }
    ],
    "esModuleInterop": true,
    "allowImportingTsExtensions": true,
    "types": ["jest"]
  },
  "include": [
    "**/*.ts",
    "**/*.tsx",
    ".next/types/**/*.ts",
    "../shared/types/**/*.ts",
    "../shared/constants/**/*.ts",
    "../shared/utils/**/*.ts"
  ],
  "exclude": [
    "node_modules",
    "../shared/**/*.test.ts",
    "../shared/**/__tests__/**",
    "../shared/**/nodeOnly/**",
    "../shared/**/serverOnly/**"
  ]
}
